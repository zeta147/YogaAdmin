<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".YogaCourseActivity">


    <TextView
        android:id="@+id/textViewYogaCourseLabel"
        style="@style/Widget.Material3.Snackbar.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/yoga_course_label"
        android:textColor="@color/black"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewUploadCloud"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_upload_cloud" />

    <ImageView
        android:id="@+id/imageViewDownloadCloud"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageViewUploadCloud"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_download_cloud" />

    <ImageButton
        android:id="@+id/buttonAddYogaCourse"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickViewAddYogaCourse"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageViewDownloadCloud"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_add_course" />

    <ImageButton
        android:id="@+id/buttonViewSchedule"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickViewYogaCourseSchedule"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/buttonAddYogaCourse"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_schedule" />

    <RelativeLayout
        android:id="@+id/panelNoYogaCourseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/no_yoga_course_message"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panelLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewYogaCourse"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="164dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddYogaCourse" />



</androidx.constraintlayout.widget.ConstraintLayout>